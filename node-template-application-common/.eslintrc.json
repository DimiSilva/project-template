{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": 0,
        "no-unused-vars": 0,
        "object-curly-newline": 0,
        "semi": [
            "error",
            "never"
        ],
        "no-console": 0,
        "indent": [
            "error",
            4
        ],
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "max-len": [
            "error",
            180
        ]
    }
}